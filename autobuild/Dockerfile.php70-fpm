# IMAGE_TAG php:7.0-fpm
FROM ubuntu:18.04

ENV TZ=Europe/Minsk
ENV DEBIAN_FRONTEND noninteractive

RUN apt-get update && apt-get install -y --no-install-recommends \
    apt-transport-https \
    apt-utils \
    gnupg \
    software-properties-common

RUN add-apt-repository -y ppa:ondrej/php

RUN apt-get install -y \
    php7.0 \
    php7.0-mysql \
    php7.0-mysqli \
    php7.0-pdo \
    php7.0-gd \
    php7.0-mbstring \
    php7.0-imagick \
    php7.0-dev \
    php7.0-xml \
    php7.0-fpm \
    php7.0-curl \
    php7.0-zip \
    curl \
    git \
    gzip \
    unzip \
    zip \
    less \
    libwebp-dev \
    libjpeg-dev \
    libpng-dev \
    libfreetype6-dev \
    libgeoip-dev \
    libmcrypt-dev \
    libzip-dev \
    tcpdump \
    telnet \
    net-tools \
    nano \
    wget \
    ssh \
    imagemagick \
    libmagickwand-dev \
    msmtp-mta

RUN apt-get install -y --no-install-recommends mysql-client || apt-get install -y --no-install-recommends default-mysql-client

RUN { \
    echo 'opcache.memory_consumption=128'; \
    echo 'opcache.interned_strings_buffer=8'; \
    echo 'opcache.max_accelerated_files=4000'; \
    echo 'opcache.revalidate_freq=0'; \
    echo 'opcache.fast_shutdown=1'; \
    echo 'opcache.enable_cli=1'; \
} > /etc/php/7.0/mods-available/opcache-recommended.ini

RUN { \
    echo 'memory_limit=2G'; \
    echo 'post_max_size=6152M'; \
    echo 'upload_max_filesize=6144M'; \
    echo 'max_execution_time=3600'; \
    echo 'max_input_vars = 50000'; \
    echo 'max_input_time=3600'; \
    echo 'error_reporting=E_ALL'; \
    echo 'display_errors=On'; \
    echo 'display_startup_errors=On'; \
    echo 'log_errors=On'; \
    echo 'log_errors_max_len=0'; \
    echo 'error_log=/dev/stderr'; \
    echo 'date.timezone = "UTC"'; \
} > /etc/php/7.0/fpm/php.ini

RUN sed -ri -e "s;listen = .*;listen = 9000;" /etc/php/7.0/fpm/pool.d/www.conf
RUN sed -ri -e "s;^user = .*;user = mapped;" /etc/php/7.0/fpm/pool.d/www.conf
RUN sed -ri -e "s;^group = .*;group = mapped;" /etc/php/7.0/fpm/pool.d/www.conf
RUN sed -ri -e "s;^error_log = .*;error_log = /var/log/php-fpm.log;" /etc/php/7.0/fpm/php-fpm.conf
RUN sed -ri -e "s;^\;catch_workers_output = .*;catch_workers_output = yes;" /etc/php/7.0/fpm/pool.d/www.conf

RUN phpenmod -v php7.0 -s ALL opcache-recommended && phpenmod -v php7.0 -s ALL mbstring

RUN ln -s /usr/sbin/php-fpm7.0 /usr/sbin/php-fpm
